{
  "name": "@shopgate/pwa-webcheckout-shopify",
  "version": "0.1.8",
  "description": "Shopgate's web checkout business logic for Shopify.",
  "main": "index.jsx",
  "repository": "shopgate/pwa-webcheckout-shopify",
  "bugs": "https://github.com/shopgate/pwa-webcheckout-shopify/issues",
  "homepage": "https://github.com/shopgate/pwa-webcheckout-shopify",
  "license": "Apache-2.0",
  "keywords": [
    "pwa",
    "mobile",
    "app",
    "node",
    "shopify",
    "checkout",
    "shopgate"
  ],
  "scripts": {
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore  --ext .js .",
    "precommit": "lint-staged",
    "test": "jest",
    "coverage": "jest --coverage",
    "prebuild": "rimraf ./dist",
    "build": "NODE_ENV=production babel ./ --out-dir ./dist --ignore tests,spec.js,spec.jsx,__snapshots__,.eslintrc.js,jest.config.js,dist,coverage,node_modules",
    "postbuild": "cp ./{package.json,package-lock.json,CHANGELOG.md,LICENSE.md,README.md} ./dist/",
    "version": "npm run build",
    "postversion": "git push && git push --tags && cd dist && npm publish --access public"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": "eslint --parser babel-eslint --ignore-path .gitignore  --ext .js ."
    }
  },
  "pre-commit": [
    "precommit"
  ],
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.2",
    "@shopgate/pwa-common": "^0.1.10",
    "@shopgate/pwa-core": "^0.1.4",
    "@shopgate/pwa-unit-test": "^1.2.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.0",
    "lint-staged": "^4.3.0",
    "pre-commit": "^1.2.2",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "rimraf": "^2.6.2",
    "rxjs": "^5.4.3"
  },
  "peerDependencies": {
    "@shopgate/pwa-common": "0.1.x",
    "@shopgate/pwa-core": "0.1.x",
    "rxjs": "^5.4.3"
  }
}
