<rt-import name="ChipsLayout" from="Templates/components" />
<rt-import name="Chip" from="Templates/components" />

<ChipsLayout
  rt-if="props.values && props.values.length !== 0"
  maxRows="{3}"
  moreLabel="filter.view_all"
  invertMoreButton
  rt-stateless
>
  <Chip invert removable={false} rt-repeat="value in props.values" key={value}>
    {value}
  </Chip>
</ChipsLayout>
