{
  "lerna": "2.9.0",
  "version": "4.11.2",
  "packages": [
    "extensions/*/frontend",
    "libraries/*",
    "themes/*",
    "utils/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-optional"
  ],
  "publishConfig": {
    "access": "public"
  },
  "commands": {
    "publish": {
      "ignore": [
        "ignored-file",
        "*.spec.*",
        "*.mock.*",
        "*/tests/*",
        "extensions/*",
        "themes/*"
      ]
    }
  }
}
